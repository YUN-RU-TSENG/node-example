doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        link(rel="stylesheet", href="/main.css")
    body
        h2 admin
        form(action="/admin/add-product", method="post", class="inline-block")
            label(for="") name
                input(type="text",name="name",require)
            label(for="") image
                input(type="text",name="image",require)
            button Add
        ul
            for item in products
                li
                    img(src=item.image, width="120")
                    span #{item.name}
                    form(action="/admin/delete-product", method="post" class="inline-block")
                        input(type="hidden", name="id", value=item.id)
                        button Delete
                    form(action="/admin/edit-product", method="get", class="inline-block")
                        input(type="hidden", name="id", value=item.id)
                        button Update