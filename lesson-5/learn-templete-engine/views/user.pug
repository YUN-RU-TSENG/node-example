doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{title}
        link(rel="stylesheet", href="/css/main.css")
        link(rel="stylesheet", href="/css/user.css")
    body
        nav.app-nav
            a(href="/") home
            a(href="/user") user
        main.app-container
            div.app-block
                p user
            form.user-form(action="/add-user",method="POST")
                label(for="user-name")
                    input#user-name(type="text", name="user-name",placeholder="請輸入用戶姓名")
                button add user
            p.user-number 一共有 #{users.length} 名用戶
            ul.user-list
                each user in users
                    li 用戶姓名 #{user}
